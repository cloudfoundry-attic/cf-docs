<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= data.page.title %> | Cloud Foundry Docs</title>

    <!-- Templates can insert head content here (like meta redirects) -->
    <%= yield_content(:head_content) %>

    <link href="/stylesheets/master.css" media="screen" rel="stylesheet" type="text/css" />
    <link href="/stylesheets/style.css" media="screen" rel="stylesheet" type="text/css" />
    <script src="/javascripts/all.js" type="text/javascript"></script>
    <link href='/images/favicon.ico' rel='shortcut icon'>

    <!--[if lt IE 9]>
    <style>
        #content .container-full {background:  #ebf0fa;}
        .call-to-contribute-box, .column-left, .column-middle, .column-right {background:#e3e8f2}
        #footer {background:#000;}
    </style>
    <![endif]-->
    <script type="text/javascript">
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-22181585-1']);
      _gaq.push(['_setDomainName', 'cloudfoundry.com']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
    </script>
  </head>

  <body class="<%= page_classes %>">
    <img id="bg" src="/images/bg-plain-x.jpg">
    <div id='non_footer'>
      <div id='content'>
            <div class="text-center" id='orgheaderbg'>
              <div id='orglogo'>
                <img src="/images/logo_org.png">
              </div>
            </div>
        <div class='container-full'>
          <div id='organization_bar'>
            <div class='navbar'>
              <ul class='nav'>
                <li id='icon-home-li'>
                  <a id='icon-home-link' href='http://www.cloudfoundry.org'>
                    <img id='icon-home' src='http://blog.cloudfoundry.com/wp-content/static/cforg/img/icon-home.png'>
                  </a>
                </li>
                <li>
                    <a id='about' href='http://www.cloudfoundry.org/about/index.html'>About</a>
                </li>
                <li>
                    <a id='learn' href='http://www.cloudfoundry.org/learn/index.html'>Learn</a>
                </li>
                <li>
                    <a id='docs' href='http://docs.cloudfoundry.com/'>Documentation</a>
                </li>
                <li>
                    <a href='http://www.cloudfoundry.org/get-in/index.html'>Get Involved</a>
                </li>
                <li>
                    <a href='http://blog.cloudfoundry.com'>Blog</a>
                </li>
                <li id="wiki">
                    <a href='https://github.com/cloudfoundry-community/cf-docs-contrib/wiki' target='_blank'>Wiki</a>
                </li>
              </ul>
            </div><!-- End of navbar -->
          </div><!-- End of organization_bar -->
          <div class='content_inner'>
            <a class="forkme" href="http://github.com/cloudfoundry/cf-docs" target="_blank">
              <img alt="Fork me on GitHub" src="/images/ribbon_forkme.png">
            </a>
            <form action='http://www.cloudfoundry.com/search' class='search-docs-form' method='get' onsubmit='return submitQuery()'>
              <input autocomplete='off' class='search-docs-input' id='search-query' name='q' onfocus="this.placeholder = 'more:docs '" placeholder='' type='search-docs' value='more:docs '>
            </form>
            <br clear="left">
            <% unless current_page.url == "/" %>
              <div class="breadcrumbs">
                <ul>
                  <li>
                    <a href="/">Home</a>
                  </li>
                  <%= trail_nav %>
                </ul>
              </div>
              <br clear="left">

              <%= quick_links %>

              <h1><%= current_page.data.title %></h1>

            <% end %>
            <%= yield %>
          </div><!-- End of content_inner -->
        </div><!-- End of container-full -->
      </div><!-- End of content -->
    </div><!-- End of non_footer -->
    <div id='footer'>
      <div id='container-footer'>
        <div class='bg_social'>
          <ul class='social'>
            <li>
            <a href='http://twitter.com/cloudfoundry' target='_blank'>
            <img alt='Twitter' src='/images/twitter_large.png'>
            </a>
            </li>
            <li>
            <a href='https://plus.google.com/114245065906861739918/posts' target='_blank'>
            <img alt='Google+' src='/images/g+_large.png'>
            </a>
            </li>
            <li>
            <a href='http://facebook.com/cloudfoundry' target='_blank'>
            <img alt='Facebook' src='/images/facebook_large.png'>
            </a>
            </li>
            <li>
            <a href='http://youtube.com/cloudfoundry' target='_blank'>
            <img alt='Youtube' src='/images/youtube_large.png'>
            </a>
            </li>
          </ul>
        </div><!-- End of bg_social -->
        <ul class='links'>
          <li>
            <a href='http://www.cloudfoundry.org/about/index.html'>About</a>
          </li>

          <li class='disc'>•</li>

          <li>
            <a href='http://docs.cloudfoundry.com/'>Documentation</a>
          </li>

          <li class='disc'>•</li>

          <li>
            <a href="https://github.com/cloudfoundry" target="_blank">Source Code</a>
          </li>

          <li class='disc'>•</li>

          <li>
            <a href='https://groups.google.com/a/cloudfoundry.org/forum/#!browse' target="_blank">Mailing Lists</a>
          </li>

          <li class='disc'>•</li>

          <li>
            <a href='http://blog.cloudfoundry.com/'>Blog</a>
          </li>

          <li class='disc'>•</li>

          <li>
            <a href='https://github.com/cloudfoundry-community/cf-docs-contrib/wiki' target="_blank">Wiki</a>
          </li>

          <li class='disc'>•</li>

         <li>
            <a href='http://cloudfoundry.org/dojo/index.html'>The Dojo</a>
         </li>
        </ul>
        <div class='copyright'>
          <div class='hr-horizontal-dark'></div>
          <br>
          <p>
            &copy;
            <script>
              //<![CDATA[
                var d = new Date();
                document.write(d.getFullYear());
              //]]>
            </script>
            <a href='http://gopivotal.com'>Pivotal Software</a> Inc. All Rights Reserved.
          </p>
        </div><!-- End of copyright -->
      </div><!-- End of container-footer -->
    </div><!-- End of footer -->
    <script type="text/javascript">
      (function() {
        var didInit = false;
        function initMunchkin() {
          if(didInit === false) {
            didInit = true;
            Munchkin.init('625-IUJ-009');
          }
        }
        var s = document.createElement('script');
        s.type = 'text/javascript';
        s.async = true;
        s.src = document.location.protocol + '//munchkin.marketo.net/munchkin.js';
        s.onreadystatechange = function() {
          if (this.readyState == 'complete' || this.readyState == 'loaded') {
            initMunchkin();
          }
        };
        s.onload = initMunchkin;
        document.getElementsByTagName('head')[0].appendChild(s);
      })();
    </script>
  </body>
</html>
